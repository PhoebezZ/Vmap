<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vmap.doge.vmap.StatusUpdateActivity">

    <Button
        android:id="@+id/updateBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update"
        android:background="@drawable/round_button"
        android:textColor="#fbead1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="162dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <RadioGroup
        android:id="@+id/StatusGroup"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/updateBut"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.896">

        <RadioButton
            android:id="@+id/workBut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WORKING" />

        <RadioButton
            android:id="@+id/notWorkBut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOT WORKING" />

        <RadioButton
            android:id="@+id/noStockBut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OUT OF STOCK" />

    </RadioGroup>

</android.support.constraint.ConstraintLayout>
